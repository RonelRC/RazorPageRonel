@page
@model Razor.Pages.Practica.Pages.Territories.EditModel
@{
}

<h1> Changes maker </h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
  <div class="alert-danger alert-danger">
      @Model.ErrorMessage
  </div>
 
}

<form method="post">

    <input asp-for="Territory.Territoryid" type="hidden"/>

    <div class="form-group">
        <label asp-for="Territory.TerritoryDescription"></label>
        <input asp-for="Territory.TerritoryDescription" type="text" class="form-control" />
    </div>

    <p>
        <button type="submit" class="btn btn-primary"> Update </button>
    </p>
</form>


